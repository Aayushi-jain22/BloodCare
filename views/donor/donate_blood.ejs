<%- include("donorbase.ejs") -%>
<!-- {% block content %}
{% load widget_tweaks %} -->
<%- include("../blood/header.ejs") -%>
<head>
        <!-- Font special for pages-->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

        <!-- Main CSS-->
    
        <link href="<%= 'css/main.css' %> "rel="stylesheet" media="all">
</head>
<div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
    <div class="wrapper wrapper--w790">
      
        <div style="margin-left: 70px;" class="card card-5">
            <div class="card-heading">
                <h2 class="title">DONATE BLOOD</h2>
            </div>
            <div class="card-body">
                <form method="POST">
                   <!-- {% csrf_token %} -->

                    <div class="form-row">
                        <div class="name">Blood Group</div>
                        <div class="value">
                            <div class="input-group">
                                <div class="rs-select2 js-select-simple select--no-search">
                                    <select name="bloodgroup">
                                        <option disabled="disabled" selected="selected">Choose option</option>
                                        <option>O+</option>
                                        <option>O-</option>
                                        <option>A+</option>
                                        <option>A-</option>
                                        <option>B+</option>
                                        <option>B-</option>
                                        <option>AB+</option>
                                        <option>AB-</option>
                                    </select>
                                    <div class="select-dropdown"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Unit (in ml)</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="number" name="unit" class="input--style-5" placeholder="unit in ml" required>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Disease (if any)</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="text" name="disease" class="input--style-5" placeholder="Nothing" required>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Age</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="number" min="18" max="65" name="age" class="input--style-5" placeholder="age" required>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Samagra-ID</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="file" name="samagra_id" class="input--style-5" placeholder="" required>
                                
                            </div>
                        </div>
                    </div>

                    <div>
                        <button class="btn btn--radius-2 btn-danger" type="submit">DONATE</button>
                    </div>
                </form>
                <br>
                

            </div>
        </div>
    </div>
</div>