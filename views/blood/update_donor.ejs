<%- include("adminbase.ejs") -%>
<!-- {% block content %}
{% load widget_tweaks %} -->
<%- include("header.ejs") -%>
<head>
        <!-- Font special for pages-->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

        <!-- Main CSS-->
    
        <link href="<%= 'css/main.css' %>" rel="stylesheet" media="all">
</head>
<div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
    <div class="wrapper wrapper--w790">
      
        <div class="card card-5">
            <div class="card-heading">
                <h2 class="title">Update Donor</h2>
            </div>
            <div class="card-body">
                <form method="POST">
                  <!--  {% csrf_token %} -->

                    <div class="form-row">
                        <div class="name">First Name</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="text" name="first_name" class="input--style-5" placeholder="First Name" required>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Last Name</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="text" name="last_name" class="input--style-5" placeholder="Last Name" required>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Username</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="text" name="username" class="input--style-5" placeholder="User Name" required>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Password</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="password" name="password" class="input--style-5" placeholder="password" required>
                                
                            </div>
                        </div>
                    </div>

                  


                    <div class="form-row">
                        <div class="name">Blood Group</div>
                        <div class="value">
                            <div class="input-group">
                                <div class="rs-select2 js-select-simple select--no-search">
                                    <select name="bloodgroup">
                                        <option disabled="disabled" selected="selected">Choose option</option>
                                        <option>O+</option>
                                        <option>O-</option>
                                        <option>A+</option>
                                        <option>A-</option>
                                        <option>B+</option>
                                        <option>B-</option>
                                        <option>AB+</option>
                                        <option>AB-</option>
                                    </select>
                                    <div class="select-dropdown"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="name">Address</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="text" name="address" class="input--style-5" placeholder="address" required>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Mobile</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="text" name="number" class="input--style-5" placeholder="Ex- 9988776655" required>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="name">Profile Pic</div>
                        <div class="value">
                            <div class="input-group">
                                
                                <input type="file" name="profile_pic" class="input--style-5" placeholder="" required>
                                
                            </div>
                        </div>
                    </div>


                    <div>
                        <button class="btn btn--radius-2 btn-danger" type="submit">Update</button>
                    </div>
                </form>
                <br>
                

            </div>
        </div>
    </div>
</div>

